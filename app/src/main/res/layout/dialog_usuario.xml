<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp">

    <TextView
        android:id="@+id/usuario_txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="UsuÃ¡rio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/usuario_edt_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/usuario_txt_user"
        app:layout_constraintStart_toStartOf="@id/usuario_txt_user"/>

    <TextView
        android:id="@+id/usuario_txt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        app:layout_constraintTop_toBottomOf="@id/usuario_edt_user"
        app:layout_constraintStart_toStartOf="@id/usuario_edt_user"/>

    <EditText
        android:id="@+id/usuario_edt_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/usuario_txt_pass"
        app:layout_constraintStart_toStartOf="@id/usuario_txt_pass"/>


</android.support.constraint.ConstraintLayout>